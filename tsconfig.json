{
  "compilerOptions": {
    "outDir": "./dist",                                  
    "module": "commonjs",                                
    "rootDirs": ["src", "tests"],
    "target": "es2019",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
     }
  },
  "include": ["src", "tests"],
  "exclude": []
}
